	<PropertyGroup Condition="'$(PlatformToolset)'=='v140'">
		<PlatformName>$(Platform)</PlatformName>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(PlatformToolset)'=='v140_xp'">
