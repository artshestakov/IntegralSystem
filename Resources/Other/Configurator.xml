<?xml version="1.0" encoding="utf-8"?>
<Scheme>

  <Section Name="Create" ClassName="CGConfiguratorCreate">
    <Function FunctionName="Resources" Description="Добавление новых ресурсов и заполнение существующих справочников"/>
  </Section>

  <Section Name="Update" ClassName="CGConfiguratorUpdate">
    <Function FunctionName="Database" Description="Полное обновление базы данных"/>
    <Function FunctionName="Functions" Description="Обновление всех функций базы данных"/>
    <Function FunctionName="Tables" Description="Обновление таблиц базы данных"/>
    <Function FunctionName="Comment" Description="Комментирование таблиц и полей"/>
    <Function FunctionName="Indexes" Description="Обновление индексов базы данных"/>
    <Function FunctionName="Foreigns" Description="Обновление внешних ключей базы данных"/>
    <Function FunctionName="Resources" Description="Обновление ресурсов и справочников базы данных"/>
    <Function FunctionName="SystemUser" Description="Обновление информации о системном пользователе"/>
    <Function FunctionName="DatabaseSettings" Description="Обновление системного профиля настроек базы данных"/>
  </Section>

  <Section Name="Delete" ClassName="CGConfiguratorDelete">
    <Function FunctionName="Indexes" Description="Удаление всех индексов из базы данных"/>
    <Function FunctionName="Foreigns" Description="Удаление всех внешних ключей из базы данных"/>
    <Function FunctionName="OldTables" Description="Удаление всех устаревших таблиц"/>
    <Function FunctionName="OldFields" Description="Удаление всех устаревших полей"/>
    <Function FunctionName="OldResources" Description="Удаление всех устаревших ресурсов"/>
    <Function FunctionName="OldSequence" Description="Удаление всех устаревших последовательностей"/>
  </Section>

  <Section Name="Service" ClassName="CGConfiguratorService">
    <Function FunctionName="Reindex" Description="Переиндексация всех индексов базы данных"/>
    <Function FunctionName="Vacuum" Description="Высвобождение пространства, занимаемое мёртвыми кортежами"/>
    <Function FunctionName="VacuumAnalyze" Description="Обновление статистики, которую использует планировщик для выбора наиболее эффективного способа выполнения запросов"/>
    <Function FunctionName="VacuumFull" Description="Выбирает режим полной очистки, который может освободить больше пространства"/>
    <Function FunctionName="ClearTable" Description="Очистка таблицы от данных"/>
  </Section>

  <Section Name="Show" ClassName="CGConfiguratorShow">
    <Function FunctionName="OldObjects" Description="Вывести список устаревших объектов базы данных"/>
    <Function FunctionName="Config" Description="Вывести содержимое конфигурационного файла"/>
    <Function FunctionName="DatabaseInfo" Description="Показать информацию о базе данных"/>
  </Section>

</Scheme>