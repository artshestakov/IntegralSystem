  </Section>

  <Section Name="Delete" ClassName="CGConfiguratorDelete">
    <Function FunctionName="Indexes" LocalName="Индексы" Description="Удаление всех индексов из базы данных."/>
    <Function FunctionName="Foreigns" LocalName="Внешние ключи" Description="Удаление всех внешних ключей из базы данных."/>
